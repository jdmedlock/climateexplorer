db.createCollection("country", {
  validator: {
    $jsonSchema: {
      bsonType: "object",
      required: [ "code", "name"],
      properties: {
        code: {
          bsonType: "string",
          description: "must be a two character string and is required"
        }
        name: {
          bsonType: "string",
          description: "must be a string of up to 47 characters and is required"
        },
      }
    }
  }
})