const validator={
	$jsonSchema : {
		bsonType : "object",
		required : [
			"name"
		],
		properties : {
			code : {
				bsonType : "string",
				description : "is the FIPS country code of the country where the station is located (from FIPS Publication 10-4 at www.cia.gov/cia/publications/factbook/appendix/appendix-d.html), must be a two character string and is required"
			},
			name : {
				bsonType : "string",
				description : "is the name of the country, must be a string of up to 47 characters and is required"
			}
		}
	}
};

db.runCommand( {
  collMod: "Country",
  validator,
  validationLevel: "moderate", //off | strict
  //validationAction: "warn" |"error"
})