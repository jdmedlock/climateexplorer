const validator={
	$jsonSchema : {
		bsonType : "object",
		required : [
			"code",
			"name"
		],
		properties : {
			code : {
				bsonType : "string",
				maxLength : 2,
				description : "is the POSTAL code of the U.S. state/territory or Canadian province where the station is located, must be a string of length 2 and is required"
			},
			name : {
				bsonType : "string",
				description : "is the name of the state, territory or province, must be a string and is required"
			}
		}
	}
};

db.runCommand( {
  collMod: "State",
  validator,
  validationLevel: "moderate", //off | strict
  //validationAction: "warn" |"error"
})